<!DOCTYPE html>
<html lang="<%= t('lang_code') %>">
<head>
    <meta charset="UTF-8">
    <title>Metin2 Ishop</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <% if (session && session.accountId) { %>
            <span><%= session.username %></span>
            <a href="/logout"><%= t('logout') %></a> |
        <% } else { %>
            <a href="/login"><%= t('login') %></a> |
        <% } %>
        <a href="/lang/en">English</a> |
        <a href="/lang/ro">Română</a> |
        <a href="/admin"><%= t('admin') %></a>
    </nav>
    <h1><%= t('welcome') %></h1>
    <% if (items.length === 0) { %>
    <p><%= t('no_items') %></p>
    <% } %>
    <div class="item-grid">
        <% items.forEach(function(item) { %>
        <div class="item">
            <h3><%= item.name %></h3>
            <p>$<%= item.price %></p>
            <a class="btn" href="/buy/<%= item.id %>"><%= t('buy') %></a>
        </div>
        <% }) %>
    </div>
    <% if (query.success) { %>
    <p><%= t('payment_success') %></p>
    <% } else if (query.canceled) { %>
    <p><%= t('payment_canceled') %></p>
    <% } %>
</body>
</html>
