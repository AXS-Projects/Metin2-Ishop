<!DOCTYPE html>
<html lang="<%= t('lang_code') %>">
<head>
    <meta charset="UTF-8">
    <title>Admin</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Admin</h1>
    <form method="post" action="/admin/add">
        <input type="text" name="id" placeholder="ID" required>
        <input type="text" name="name" placeholder="<%= t('item_name') %>" required>
        <input type="number" step="0.01" name="price" placeholder="<%= t('price') %>" required>
        <button type="submit"><%= t('add_item') %></button>
    </form>
    <% if (error) { %>
    <p class="error"><%= error %></p>
    <% } %>
    <h2><%= t('current_items') %></h2>
    <ul>
        <% items.forEach(function(item){ %>
        <li>
            <form class="inline-form" method="post" action="/admin/edit/<%= item.id %>">
                <input type="text" name="name" value="<%= item.name %>">
                <input type="number" step="0.01" name="price" value="<%= item.price %>">
                <button type="submit"><%= t('save') %></button>
            </form>
            <form class="inline-form" method="post" action="/admin/delete/<%= item.id %>">
                <button type="submit"><%= t('delete') %></button>
            </form>
        </li>
        <% }) %>
    </ul>
    <a href="/">&larr; <%= t('back') %></a>
</body>
</html>
